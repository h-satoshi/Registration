<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.devMode" value="true"/>
	<package name="com.diworksdev.registration" extends="struts-default">
		<!-- 既存の入力画面→確認画面へ進めるアクション -->
    	<action name="RegistAction" class="com.diworksdev.registration.action.RegistAction">
      		<result name="error">regist.jsp</result>
      		<result name="success">regist_confirm.jsp</result>
    	</action>
		
		<!-- 確認→完了 -->
    	<action name="Regist_confirmAction" class="com.diworksdev.registration.action.Regist_confirmAction">
      		<result name="input">regist_confirm.jsp</result>
      		<result name="success">regist_complete.jsp</result>
    	</action>
	</package>
</struts>